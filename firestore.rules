rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow write access to 'customers' and 'orders' only if authenticated
    match /customers/{documentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /orders/{documentId} {
      allow read: if false;
      allow write: if request.auth != null;
    }

    match /{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.email.matches('.*@cohensbagelry\\.com$');
    }
  }
}
